rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null;
      
      // Allow updates to most fields, but PROTECT verifiedBadges
      // Only Cloud Functions (using Admin SDK) can bypass this
      allow update: if request.auth != null 
                    && request.auth.uid == userId 
                    && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['verifiedBadges']));
      
      allow create: if request.auth != null && request.auth.uid == userId;
    }
  }
}
